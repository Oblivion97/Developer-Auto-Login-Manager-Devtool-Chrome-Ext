{
  "manifest_version": 3,
  "name": "Auto Login Helper",
  "version": "1.0",
  "description": "Save login data and auto-fill a website",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
