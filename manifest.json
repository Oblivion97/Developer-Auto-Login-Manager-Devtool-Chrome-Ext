{
  "manifest_version": 3,
  "name": "Auto Login Helper",
  "version": "1.0",
  "description": "Save login data and auto-fill a website",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ChatGPT Image Sep 7, 2025, 05_27_44 PM.png",
      "32": "ChatGPT Image Sep 7, 2025, 05_27_44 PM.png",
      "48": "ChatGPT Image Sep 7, 2025, 05_27_44 PM.png",
      "128": "ChatGPT Image Sep 7, 2025, 05_27_44 PM.png"
    }
  },
  "icons": {
    "16": "ChatGPT Image Sep 7, 2025, 05_27_44 PM.png",
    "32": "ChatGPT Image Sep 7, 2025, 05_27_44 PM.png",
    "48": "ChatGPT Image Sep 7, 2025, 05_27_44 PM.png",
    "128": "ChatGPT Image Sep 7, 2025, 05_27_44 PM.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
